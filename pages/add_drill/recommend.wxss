.page{
  width:100%;
  height:100%;
  background: #fff;
}
.Pic-box{
  width:690rpx;
  height:210rpx;
  overflow: hidden;
  position: relative;
}
.Pic-box .bg-img{
  width:690rpx;
  height:360rpx;
  opacity:0.8;
  margin-top: -75rpx;
}
.Pic-box .right-img{
  width:14rpx;
  height:24rpx;
  position: absolute;
  top:93rpx;
  left:655rpx;
}
.Pic-content{
  width:610rpx;
  position: absolute;
  top:0;
  color: #fff;
  font-size: 22rpx;
  padding: 32rpx 40rpx 0 40rpx;
}
.Pic-content .title{
  margin-bottom: 20rpx;
  font-size: 36rpx;
  height:50rpx;
  line-height: 50rpx;
}
.Pic-content .explain{
  width: 450rpx;
}
.difficulty{
  height:85rpx;
  line-height: 85rpx;
  font-size: 22rpx;
  display: flex;
  color:#888888;
}
.content-box{
  margin: 0 30rpx 40rpx 30rpx;
  box-shadow:2px 2px 3px #b2b2b2;
}
.grade{
  display: flex;
  margin-left: 40rpx;
  margin-right: auto;
}
.grade .iconfont{
  font-size:22rpx;
  margin-left: 7rpx;
}
.joinNumber{
  margin-right: 20rpx;
}

