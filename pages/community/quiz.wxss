/* pages/community/quiz.wxss */

.page {
  width: 100%;
  background: #fff;
}

.main {
  height: 100%;
  margin: 0 30rpx;
  padding-bottom:100rpx;
}
.title {
  font-size: 26rpx;
  color: #B2B2B2;
  padding: 30rpx 0 20rpx 0;
}
textarea {
  font-size: 26rpx;
  width: 100%;
  height: 37rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
input{
  font-size: 26rpx;
  border-bottom: 1rpx solid #E5E5E5;
  width:100%;
  height:37rpx;
  line-height: 37rpx;
  color:#222;
  margin-bottom: 21rpx;
}
.label{
  display: flex;
  flex-wrap:wrap;
  font-size: 26rpx;
  margin-bottom:50rpx;
}
._labelContent{
 padding:13rpx 19rpx;
 border-radius: 4px;
 margin:0 20rpx 15rpx 0;
 color:#00cc97;
 border: 1px solid #00CC91;
}
.labelClass1{
 background: #00CC91;
 color:#fff;
}
textarea.describe {
  height: 268rpx;
  background: #EEEFEE;
  font-size: 30rpx;
  color:#222;
  overflow:hidden;
}
.addPic{
  display: flex;
  justify-content: flex-end;
  align-items:center;
  color:#DEDEDE;
  margin-top: 10rpx;
}
.addPic view{
  margin-left:10rpx;
  font-size:26rpx;
}
.pic{
  height:350rpx;
  background:#EEEFEE;
  overflow: hidden;
}
.pic image{
  width:100%;
  height:100%;
}
.btn{
  width:100%;
  background: #00CC91;
  font-size:36rpx;
  position: fixed;
  bottom: 0;
  border-radius: 0;
  color:#fff;
  z-index: 5;
}