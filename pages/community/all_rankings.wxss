.page {
  width: 100%;
  background: #fff;
}

.nearbyTitle {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #8b8e93;
  margin-left: 30rpx;
  height: 87rpx;
  line-height: 87rpx;
}

.detailedInformation_box {
  display: flex;
  flex-wrap: wrap;
  margin-left: 30rpx;
}

.detailedInformation {
  position: relative;
  margin: 0 25rpx 30rpx 0;
  border-radius: 8px;
  overflow: hidden;
}

.detailedInformation_bg {
  width: 330rpx;
  height: 330rpx;
  overflow: hidden;
}

.detailedInformation_bg image {
  width: 100%;
  height: 100%;
}

textarea {
  width: 330rpx;
  height: 74rpx;
  font-size: 26rpx;
  color: #222;
}

.userNickName {
  position: absolute;
  top: 286rpx;
  left: 10rpx;
  font-size: 24rpx;
  color: #fff;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.50);
}

.nearbyInfo {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
}

.icon-time {
  font-size: 22rpx;
  margin-right: 10rpx;
}

.todayDrill {
  display: flex;
  align-items: center;
}
.loading {
  padding: 10rpx;
  text-align: center;
  font-size: 26rpx;
}
