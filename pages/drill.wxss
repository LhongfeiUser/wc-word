 .page {
  width: 100%;
  height: 100%;
}

.main {
  height: 100%;
  background: #fff;
}

.goal_box {
  position: relative;
  padding: 10rpx 40rpx;
  font-size: 22rpx;
  background: #fff;
  border-bottom: 20rpx solid #f8f8f8;
  color: #888;
  overflow: hidden;
}

.goal_top_right {
  position: absolute;
  top: 10rpx;
  right: -30rpx;
  font-size: 22rpx;
  border: 2rpx solid #888;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  padding-right: 30rpx;
  display: flex;
  align-items: center;
}

.goal_box .icon-word {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  background: #f8f8f8;
  overflow: hidden;
  text-align: center;
  line-height: 46rpx;
  margin: 7rpx;
}

.goal_top_right text{
  margin: 7rpx 3rpx;
}
.goal {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.goal_top{
  padding-bottom: 20rpx;
}
.goal_bottom {
  display: flex;
  justify-content: space-between;
}

.goal_bottom_view {
  width: 335rpx;
}

.goal_bottom_view view{
  padding-bottom: 16rpx;
}

.goal_top view {
  font-size: 26rpx;
}

.goal_top text {
  font-size: 96rpx;
  color: #00cc97;
}

.goal_bottom text {
  font-size: 40rpx;
  color: #353535;
  padding-bottom: 20rpx;
}

.top {
  background: #fff;
  border-bottom: 20rpx solid #f8f8f8;
}

.recommend {
  display: flex;
  justify-content: space-between;
  margin: 25rpx 30rpx;
  font-size: 26rpx;
  height: 37rpx;
  line-height: 37rpx;
  color: #888;
}

.recommend .icon-right {
  font-size: 28rpx;
  color:#b2b2b2;
}

.no_recommend{
  position: relative;
  margin: 0 30rpx 30rpx 30rpx;
  width: 690rpx;
  height: 300rpx;
  overflow: hidden;
}

.no_recommend image {
  width: 690rpx;
  height: 300rpx;
  opacity: 0.8;
}
.no_recommend_content{
  width: 690rpx;
  position: absolute;
  top: 0;
  color: #fff;
  font-size: 22rpx;
  text-align: center
}
.no_recommend_desc{
  margin: 60rpx 0 40rpx 0;
}
.no_recommend_desc view{
  margin-bottom: 5rpx;
}
.no_recommend_btn {
  width:255rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 36rpx;
  border-radius: 44rpx;
  background-color: #00cc97;
  margin: 0 217rpx;
}
.recommend_content{
  margin-bottom: 30rpx;
}

.contentPic {
  margin: 0 30rpx 10rpx 30rpx;
  width: 690rpx;
  height: 180rpx;
  overflow: hidden;
  position: relative;
}

.contentPic image {
  width: 690rpx;
  height: 360rpx;
  margin-top: -90rpx;
  opacity: 0.8;
}

.drill_content {
  width: 690rpx;
  height: 180rpx;
  position: absolute;
  top: 0;
  color: #fff;
}

.product-name {
  font-size: 26rpx;
  margin: 40rpx 30rpx 20rpx 30rpx;
  height: 37rpx;
  line-height: 37rpx;
}

.product-desc {
  font-size: 22rpx;
  width: 450rpx;
  margin-left: 30rpx;
}

.bottom {
  background: #fff;
}

.my_drill {
  font-size: 26rpx;
  height: 87rpx;
  line-height: 87rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx;
  color: #888;
  border-bottom: 2rpx solid #f8f8f8;
}

.drill_add {
  color: #353535;
}

.drill_way {
  position: relative;
  height: 182rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #f8f8f8;
}

.title {
  margin: 30rpx;
}

.title view {
  font-size: 34rpx;
  color: #353535;
  height: 48rpx;
  line-height: 48rpx;
  margin-bottom: 20rpx;
}

.title text {
  color: #888;
  font-size: 26rpx;
  height: 37rpx;
  line-height: 37rpx;
}

.drill_img {
  position: relative;
  width: 118rpx;
  height: 118rpx;
  margin: 32rpx 30rpx;
}

.add_product {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.circle {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}

.draw_btn {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
  line-height: 118rpx;
  font-size: 26rpx;
  color: #888;
} 
