/* pages/drill/morningCall/mockExam.wxss */

.page {
  width: 100%;
  height: 100%;
  font-family: "Helvetica Neue",
                 Helvetica,
                 Arial,
                 "Hiragino Sans GB",
                 "Hiragino Sans GB W3",
                 "WenQuanYi Micro Hei",
                 "Microsoft YaHei UI",
                 "Microsoft YaHei",
                 sans-serif;
  font-size: 28rpx;
  background: #fff;
}

.container {
  width: 100%;
}

.header {
  background-color: #333;
  color: #fff;
  padding: 0 10rpx 15rpx;
}

.gre-logo {
  display: flex;
  align-items: flex-end;
  margin: 0;
  padding-top: 10rpx;
}

.gre {
  font-style: italic;
  font-size: 36rpx;
  margin-right: 10rpx;
  line-height: 32rpx;
}

.buttons {
  opacity: 0.6;
}

.button {
  width: 150rpx;
  display: block;
  text-align: center;
  background: #4263b0;
  border-radius: 10rpx;
  border: 4rpx solid #fff;
  margin: auto;
}

.section {
  height: 52rpx;
  background-color: #f0e1e4;
  line-height: 52rpx;
  font-weight: 700;
  border-bottom: 2rpx solid #b4b4b4;
  color: #000;
}

.sectionContent {
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.section::before {
  content: " ";
  display: block;
  background: #882f5c;
  height: 4rpx;
  position: relative;
  box-sizing: border-box;
}

.btn-box {
  display: flex;
  justify-content: center;
}

.btn.btnBig {
  width: 150rpx;
}
.btn.btnWaring{
  background: #75586d;
}
.btn.btnMain {
  background: #4263b0;
}
.btn {
  width: 110rpx;
  display: block;
  text-align: center;
  border-radius: 10rpx;
  border: 4rpx solid #fff;
  margin: 20rpx 10rpx 20rpx 0;
  padding: 5rpx 0;
}


.content {
  font-family: arial;
  flex-grow: 1;
  padding: 2rpx;
  display: flex;
  flex-direction: column;
}

/*content-item1  */

.content-item1 {
  margin: 20rpx 30rpx;
  height: 100%;
  background: #fff;
  font-size:32rpx;
}

.content-title {
  border-bottom: 2rpx solid #000;
  text-align: center;
  font-weight: 700;
}

.title-h2 {
  padding-bottom: 20rpx;
  font-size: 44rpx;
}
.title-h4 {
  padding-bottom: 20rpx;
}
.title-h4 text{
  padding: 0 20rpx;
}
.subhead {
  text-align: center;
  font-weight: 700;
  margin: 20rpx 0;
}

.subheadBold {
  font-weight: 700;
}
.subheadBox{
  text-align: justify;
}

.content-item1 text {
  line-height: 150%;
  color: #333;
}

/*content-item2  */

.content-item2 {
  border: 8rpx double #000;
  padding: 30rpx 30rpx 200rpx 30rpx;
  font-size: 32rpx;
  background: #fff;
}

.subjectDefinition {
  padding: 30rpx;
  text-align: center;
  background: #d3d3d3;
  margin-bottom: 60rpx;
}

.question-content {
  display: block;
  margin-bottom: 60rpx;
  text-align: justify;
}

.option-box {
  margin-bottom: 60rpx;
}

.option-title {
  margin: 30rpx 0;
  text-align: center;
}

.option {
  margin: 0 auto;
  width: 370rpx;
  border: 2rpx solid #000;
  text-align: center;
  padding: 10rpx 0;
  word-break: break-all;
  border-bottom: none;
}

.options :last-child{
  border-bottom: 2rpx solid #000;
}

.option.selected{
  color:#fff;
  background: #000;
}

/* content-item3 */

.content-item3 {
  border: 8rpx double #000;
  padding: 30rpx 30rpx 200rpx 30rpx;
  font-size: 26rpx;
  height: 100%;
  background: #fff;
}

.content-item3 text {
  display: block;
  margin-bottom: 60rpx;
}

.diamondBox {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.diamond {
  border: 1rpx solid #000;
  width: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  margin-right: 30rpx;
}

/* .content-item4 */

.content-item4 {
  border: 2rpx solid #000;
  padding: 2rpx;
  font-size: 26rpx;
  line-height: 120%;
  height: 100%;
  background: #fff;
}

.item4-top {
  border: 2rpx solid #000;
}

.item4-title {
  background-color: #003082;
  color: white;
  padding: 3rpx;
  font-family: TimesNewRoman;
  font-size: 20rpx;
  line-height: 50rpx;
  padding-left: 20rpx;
  letter-spacing: -1rpx;
}

.item4-top text {
  padding: 0 40rpx 40rpx;
  display: block;
  font-size: 22rpx;
  letter-spacing: 2rpx;
  word-spacing: 10rpx;
}

.item4-bottom {
  border: 2rpx solid #000;
  padding: 20rpx 40rpx 200rpx;
  margin-top: 2rpx;
  font-size: 22rpx;
  letter-spacing: 2rpx;
  word-spacing: 10rpx;
}

.option4-contenBox {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  margin-top: 20rpx;
}

.option4 {
  margin-top: 30rpx;
}

.ellipse {
  width: 130rpx;
  height: 30rpx;
  border-radius: 75%;
  border: 1rpx solid #000;
  margin-right: 30rpx;
}

.option4-diamond {
  width: 100rpx;
  border: 1rpx solid #000;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  margin-right: 30rpx;
}
