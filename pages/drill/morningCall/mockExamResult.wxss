/* pages/drill/morningCall/mockExamResult.wxss */

.page {
  width: 100%;
  font-size: 26rpx;
  font-family: PingFangSC-Semibold;
}

.header {
  position: relative;
  width: 100%;
  background: #fff;
}

.header-top {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.title {
  color: #000;
  font-weight: 700;
}

.icon-next {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 40rpx;
  color: #cad1ce;
}

.icon-back1 {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  font-size: 40rpx;
  color: #cad1ce;
}

.explain {
  padding: 20rpx 30rpx 20rpx 0;
  margin-left: 30rpx;
  border-top: 1rpx solid #e5e5e5;
  color: #999;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.passage {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}

.passageContentBox {
  margin-left: 30rpx;
}

.passageTitle {
  color: #999;
  padding: 26rpx 0 16rpx 0;
}

.content {
  border-top:1rpx solid #e5e5e5;
  padding: 20rpx 30rpx 20rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}

.content-left {
  width: 530rpx;
}

.choice {
  color: #222;
  margin-bottom:20rpx;
  font-weight: 500;
}

.particulars {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
  color:#CFCFCF;
}
.star{
  width:120rpx;
  display: flex;
}

.answerTime {
  display: flex;
  width: 105rpx;
  margin-left: 25rpx;
}
.icon-spenttime{
  margin-right:10rpx;
}

.content-right {
  display: flex;
  align-items: center;
  background: #25c97c;
  border-radius: 11rpx;
  color:#fff;
  font-weight: 500;
  text-align: center;
  width: 160rpx;
  height: 80rpx;
  margin:5rpx 0;
}
.vio-explain{
  width:100%;
}
.icon-right1{
  color:#25c97c;
  font-size:30rpx;
  width: 30rpx;
  margin-left: 75rpx;
  margin-right: 175rpx;
}

.icon-wrong{
  color:#f43530;
  font-size:30rpx;
  width: 30rpx;
  margin-left: 75rpx;
  margin-right: 175rpx;
}

.icon-difficulty_fills{
  font-size:22rpx;
}