.page {
  width: 100%;
  height: 100%;
  font-family: "Helvetica Neue",
                 Helvetica,
                 Arial,
                 "Hiragino Sans GB",
                 "Hiragino Sans GB W3",
                 "WenQuanYi Micro Hei",
                 "Microsoft YaHei UI",
                 "Microsoft YaHei",
                 sans-serif;
  font-size: 28rpx;
  background: #fff;
}

.container {
  width: 100%;
}

.header {
  background-color: #333;
  color: #fff;
  padding: 0 10rpx 15rpx;
}

.gre-logo {
  display: flex;
  align-items: flex-end;
  margin: 0;
  padding-top: 10rpx;
}

.gre {
  font-style: italic;
  font-size: 36rpx;
  margin-right: 10rpx;
  line-height: 32rpx;
}

.buttons {
  opacity: 0.6;
}

.button {
  width: 150rpx;
  display: block;
  text-align: center;
  background: #4263b0;
  border-radius: 10rpx;
  border: 4rpx solid #fff;
  margin: auto;
}

.section {
  height: 52rpx;
  background-color: #f0e1e4;
  line-height: 52rpx;
  font-weight: 700;
  border-bottom: 2rpx solid #b4b4b4;
  color: #000;
}

.sectionContent {
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.section::before {
  content: " ";
  display: block;
  background: #882f5c;
  height: 4rpx;
  position: relative;
  box-sizing: border-box;
}

.btn-box {
  display: flex;
  justify-content: center;
}


.btn.btnBig {
  width: 150rpx;
}
.btn.btnWaring{
  background: #75586d;
}
.btn.btnMain {
  background: #4263b0;
}
.btn {
  width: 110rpx;
  display: block;
  text-align: center;
  border-radius: 10rpx;
  border: 4rpx solid #fff;
  margin: 20rpx 10rpx 20rpx 0;
  padding: 5rpx 0;
}

.content {
  height: 100%;
  border: 8rpx double #000;
  padding: 0 30rpx 100rpx;
  font-size: 32rpx;
  background: #fff;
}

.contentText {
  text-align: justify;
  line-height: 150%;
  color: #333;
  margin: 40rpx 0;
}

.overstriking {
  font-weight: 700;
}

/*表格  */
.review-table{
  display: table;
  border: 2rpx solid #aaa;
  margin-bottom: 40rpx;
  text-align: center;
  font-size: 28rpx;
  width: 100%;
}
.review-thead{
  background: #aac4d5;
  font-weight: 700;
  display:table-header-group;
}
.review-tbody{
  display:table-row-group;
}
.review-tr{
  display:table-row;
}
.review-td{
  height: 40rpx;
  line-height: 40rpx;
  border: 2rpx solid #aaa;
  display:table-cell;
}
.review-thead.review-td{
  border: none;
}
.review-status0{
  color: #aaa;
}
.review-statusselected{
  background: #d3e4ee;
}
