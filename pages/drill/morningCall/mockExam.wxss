/* pages/drill/morningCall/mockExam.wxss */

.page {
  width: 100%;
  font-family: "Helvetica Neue",
                 Helvetica,
                 Arial,
                 "Hiragino Sans GB",
                 "Hiragino Sans GB W3",
                 "WenQuanYi Micro Hei",
                 "Microsoft YaHei UI",
                 "Microsoft YaHei",
                 sans-serif;
  font-size: 11pt;
  background: #fff;
}

.container {
  width: 100%;
}

.header {
  background-color: #333;
  color: #fff;
  padding: 0 10rpx 15rpx;
}

.gre-logo {
  display: flex;
  align-items: flex-end;
  margin: 0;
  padding-top: 10rpx;
}

.gre {
  font-style: italic;
  font-size: 14pt;
  margin-right: 10rpx;
  line-height: 32rpx;
}

.buttons {
  opacity: 0.6;
}

.button {
  width: 150rpx;
  display: block;
  text-align: center;
  background: #4263b0;
  border-radius: 10rpx;
  border: 4rpx solid #fff;
  margin: auto;
}

.section {
  height: 52rpx;
  background-color: #f0e1e4;
  line-height: 52rpx;
  font-weight: 700;
  border-bottom: 2rpx solid #b4b4b4;
  color: #000;
}

.sectionContent {
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.section::before {
  content: " ";
  display: block;
  background: #882f5c;
  height: 4rpx;
  position: relative;
  box-sizing: border-box;
}

.btn-box {
  display: flex;
  justify-content: center;
}

.btn.btnFirst {
  width: 150rpx;
  display: block;
  text-align: center;
  background: #75586d;
  border-radius: 10rpx;
  border: 4rpx solid #fff;
}

.btn {
  width: 110rpx;
  display: block;
  text-align: center;
  border-radius: 10rpx;
  border: 4rpx solid #fff;
  margin: 20rpx 10rpx 20rpx 0;
  padding: 5rpx 0;
}

.content {
  font-family: arial;
  flex-grow: 1;
  padding: 2rpx;
  display: flex;
  flex-direction: column;
}

/*content-item1  */

.content-item1 {
  margin: 20rpx 30rpx;
}

.content-title {
  border-bottom: 2rpx solid #000;
  padding: 10rpx 0 20rpx;
  text-align: center;
  font-size: 14pt;
  font-weight: 700;
}

.title-h2 {
  margin: 20rpx 0;
}

.subhead {
  text-align: center;
  font-size: 13pt;
  font-weight: 700;
  margin-top: 30rpx;
}

.content-item1 text {
  font-size: 13pt;
  line-height: 45rpx;
  color: #333;
}

/*content-item2  */

.content-item2 {
  border: 8rpx double #000;
  padding: 30rpx 30rpx 200rpx 30rpx;
  font-size: 13pt;
}

.subjectDefinition {
  padding: 30rpx;
  text-align: center;
  background: #d3d3d3;
  margin-bottom: 60rpx;
}

.content-item2 text {
  display: block;
  margin-bottom: 60rpx;
}

.option-box {
  margin-bottom: 60rpx;
}

.option-title {
  margin: 30rpx 0;
  text-align: center;
}

.option {
  margin: 2rpx auto;
  width: 370rpx;
  border: 2rpx solid #000;
  text-align: center;
  padding: 10rpx 0;
}
