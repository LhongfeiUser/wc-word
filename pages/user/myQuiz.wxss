/* pages/user/myQuiz.wxss */

.my_drill {
  font-size: 26rpx;
  height: 87rpx;
  line-height: 87rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  color: #888;
  background: #fff;
  border-bottom:2rpx solid #E5E5E5;
}
.askHead {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e5e5e5;
  padding: 32rpx 30rpx 16rpx 30rpx;
  background: #fff;
}

.askHead_anwser {
  color: #fff;
  background: #00cc97;
  border-radius: 4rpx;
  font-size: 26rpx;
  margin: 0;
}

.askHead_new {
  color: #999;
}

.askContent {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.issue {
  padding: 30rpx 0 7rpx 0;
  font-size: 30rpx;
  color: #222;
}

.label_item {
  display: flex;
  flex-wrap: wrap;
  color: #cecece;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.userQuestionTime .quiz {
  margin-left: 20rpx;
}

.problemSpecific view {
  margin-right: 20rpx;
  border: 1rpx solid #cecece;
  border-radius: 4rpx;
  padding: 2rpx 8rpx;
}

.quizPic {
  float: left;
  width: 160rpx;
  height: 120rpx;
  margin-right: 10rpx;
}

.quizPic image {
  display: block;
  width: 100%;
  height: 100%;
}

.contentDetails {
  overflow: hidden;
  font-size: 26rpx;
  color: #999;
  margin: 30rpx 0 20rpx 0;
}

.contentCharacter {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.respond {
  display: flex;
  font-size: 24rpx;
}

.respond view {
  color: #cecece;
  margin: 0 20rpx 30rpx 0;
}